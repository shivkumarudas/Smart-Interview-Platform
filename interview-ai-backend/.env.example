# MongoDB (required for auth/profile/feedback)
MONGO_URI=mongodb://127.0.0.1:27017/interviewai

# Groq (required for interview question/evaluation)
GROQ_API_KEY=your_groq_api_key_here
# Optional: Groq model override
# GROQ_MODEL=llama-3.1-8b-instant

# OpenAI (optional but recommended for realistic AI voice)
# OPENAI_API_KEY=your_openai_api_key_here
# TTS_MODEL=gpt-4o-mini-tts
# TTS_VOICE=verse
# TTS_RESPONSE_FORMAT=mp3
# TTS_SPEED=1.0
# STT_MODEL=gpt-4o-mini-transcribe

# Optional: Groq speech-to-text model override (used when OPENAI_API_KEY is not set)
# GROQ_STT_MODEL=whisper-large-v3-turbo

# Server port
PORT=5000

# Optional: restrict CORS for separate-frontend development
# CORS_ORIGIN=http://127.0.0.1:5500

# Optional: require DB to boot (enabled automatically in production)
# REQUIRE_DB=false
