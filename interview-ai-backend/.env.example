# MongoDB (required for auth/profile/feedback)
MONGO_URI=mongodb://127.0.0.1:27017/interviewai

# Gemini (required for interview question/evaluation)
GEMINI_API_KEY=your_gemini_api_key_here
# Optional: Gemini model override
# GEMINI_MODEL=gemini-flash-lite-latest

# Voice/TTS provider (optional, default auto: Gemini first, then OpenAI)
# TTS_PROVIDER=gemini
# Gemini TTS model + voice (used when Gemini is selected for voice)
# GEMINI_TTS_MODEL=gemini-2.5-flash-preview-tts
# GEMINI_TTS_VOICE=Kore

# OpenAI (optional fallback for voice + speech transcription)
# OPENAI_API_KEY=your_openai_api_key_here
# TTS_MODEL=gpt-4o-mini-tts
# TTS_VOICE=verse
# TTS_RESPONSE_FORMAT=mp3
# TTS_SPEED=1.0
# STT_MODEL=gpt-4o-mini-transcribe

# Optional: Gemini speech-to-text model override (used when OPENAI_API_KEY is not set)
# GEMINI_STT_MODEL=gemini-flash-lite-latest

# Server port
PORT=5000

# Optional: restrict CORS for separate-frontend development
# CORS_ORIGIN=http://127.0.0.1:5500

# Optional: require DB to boot (enabled automatically in production)
# REQUIRE_DB=false

# Auth token secret (required in production)
JWT_SECRET=replace_with_a_long_random_secret

# Optional: token lifetime (jsonwebtoken format, e.g., 12h, 7d)
# JWT_EXPIRES_IN=7d

# Optional: password reset security controls
# PASSWORD_RESET_CODE_TTL_MINUTES=15
# PASSWORD_RESET_MAX_ATTEMPTS=5

# Optional: endpoint rate limits (per window)
# RATE_LIMIT_SIGNUP_MAX=10
# RATE_LIMIT_LOGIN_MAX=15
# RATE_LIMIT_FORGOT_REQUEST_MAX=6
# RATE_LIMIT_FORGOT_CONFIRM_MAX=10
# RATE_LIMIT_FORGOT_LEGACY_MAX=10
# RATE_LIMIT_QUESTION_PER_MIN=30
# RATE_LIMIT_EVALUATE_PER_MIN=30
# RATE_LIMIT_TRANSCRIBE_PER_MIN=20
# RATE_LIMIT_TTS_PER_MIN=20
